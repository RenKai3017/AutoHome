<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_depreciate"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_series_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_depreciate"
            android:layout_toRightOf="@+id/iv_depreciate"
            android:text="name"/>

        <TextView
            android:id="@+id/tv_spec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_series_name"
            android:layout_toRightOf="@+id/tv_series_name"
            android:layout_marginLeft="5dp"
            android:text="spec"/>

        <TextView
            android:id="@+id/tv_dealer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_series_name"
            android:layout_below="@+id/tv_series_name"
            android:layout_marginTop="30dp"
            android:textColor="#f11313"
            android:text="price"/>

        <TextView
            android:id="@+id/tv_fct_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_series_name"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_dealer_price"
            android:text="fct"/>

        <TextView
            android:id="@+id/tv_cut_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_series_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#18ef3c"
            android:text="cut"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="city"/>

        <TextView
            android:id="@+id/tv_short_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="name"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="distance"/>

        <TextView
            android:id="@+id/tv_order_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="order"/>
    </LinearLayout>
</LinearLayout>