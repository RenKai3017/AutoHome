<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app = "http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/recommend_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@android:color/holo_blue_dark"
        app:tabIndicatorColor="@android:color/holo_blue_dark"
        android:background="#f9f7f7"/>
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dcdada"
        android:layout_below="@+id/recommend_tab"
        android:layout_alignBottom="@+id/recommend_tab"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/recommend_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/tv_line"/>
</RelativeLayout>